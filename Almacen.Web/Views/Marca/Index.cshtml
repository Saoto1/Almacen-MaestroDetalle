@model IEnumerable<Almacen.Models.Models.Marca>

@{
    ViewData["Title"] = "Index";


    List<Almacen.Models.Models.TipoHerramienta> herramienta = ViewBag.TipoHerramienta as List<Almacen.Models.Models.TipoHerramienta>;
}


<h1>Marca</h1>


<style>
    .btn {
        margin: 20px;
        margin-left: 1px;
    }
</style>
<h2>Buscar</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Buscar">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input type="text" class="form-control" name="Nombre" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Descripcion</label>
                        <input type="text" class="form-control" name="Descripcion" />
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="control-label">Activo</label>
                    <select name="TipoHerramientaId" class="form-control">
                        @foreach (var item in herramienta)
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }
                    </select>

                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Exactitud</label>
                        <input type="text" class="form-control" name="Exactitud" />
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="control-label">Activo</label>
                    <select name="Activo" class="form-control">
                        <option selected value="1">Activo</option>

                        <option value="2">Inactivo</option>

                    </select>

                </div>



                <div class="form-group">

                    <input type="submit" value="Buscar" class="btn btn-primary" />
                    <a asp-action="Create" class="btn btn-primary">Crear</a>
                </div>


            </div>

        </form>
    </div>
</div>




<table class="table">
    <thead>
        <tr>
            <th colspan="2">Acciones</th>

            <th>
            <th>
                    @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.TipoHerramientaId)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Exactitud)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="botonestabla">
                    @Html.ActionLink("Modificar", "Edit", new {  id = item.Id }, new { @class = "btn btn-success" })
                </td>
                <td class="botonestabla">
                    @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                </td>
                <td class="botonestabla">
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger"})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => herramienta.Where(x => x.Id == item.TipoHerramientaId).FirstOrDefault().Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exactitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>

            </tr>
        }
    </tbody>
</table>
