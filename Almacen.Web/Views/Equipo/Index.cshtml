@model IEnumerable<Almacen.Models.Models.Equipo>

@{
    ViewData["Title"] = "Index";

    List<Almacen.Models.Models.Marca> marcas = ViewBag.Marca as List<Almacen.Models.Models.Marca>;
}
<h1>Equipo</h1>


<h2>Buscar</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Buscar">
            <div class="row">

                <div class="col-md-2">
                    <label class="control-label">Marca</label>
                    <select name="MarcaId" class="form-control">
                        <option selected value="">SELECCIONAR</option>
                        @foreach (var item in marcas)
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }
                    </select>

                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">NombreEquipo</label>
                        <input type="text" class="form-control" name="NombreEquipo" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">NumeroSerie</label>
                        <input type="text" class="form-control" name="NumeroSerie" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Descripcion</label>
                        <input type="text" class="form-control" name="Descripcion" />
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="control-label">Activo</label>
                    <select name="Activo" class="form-control">
                        <option selected value="true">Activo</option>

                        <option value="false">Inactivo</option>

                    </select>

                </div>

                <div class="form-group ">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                    <a asp-action="Create" class="btn btn-primary" >Create </a>
                </div>

        
             

            </div>
        </form>
    </div>
</div>


<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th colspan="3">Acciones</th>

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEquipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
          
    
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="botonestabla">
                    @Html.ActionLink("Modificar", "Edit", new {  id = item.Id }, new { @class = "btn btn-success" })
                </td>
                <td class="botonestabla">
                    @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                </td>
                <td class="botonestabla">
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger"})
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => marcas.Where(x => x.Id == item.MarcaId).FirstOrDefault().Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NombreEquipo)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.NumeroSerie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
        
                
       
            </tr>
        }
    </tbody>
</table>
