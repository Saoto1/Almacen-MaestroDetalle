@model Almacen.Models.Models.Prestamo

@{
    ViewData["Title"] = "Create";

  
    List<Almacen.Models.Models.Marca> marcas = ViewBag.Marcas as List<Almacen.Models.Models.Marca>;
    List<Almacen.Models.Models.Equipo> equipos = ViewBag.Equipo as List<Almacen.Models.Models.Equipo>;

}



<h1>Create</h1>

<h4>Prestamo</h4>
<hr />

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">@ViewBag.Mensaje</div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Persona" class="control-label"></label>
                <input asp-for="Persona" class="form-control" />
                <span asp-validation-for="Persona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <select asp-for="MarcaId" class="form-control">
                    @foreach (var item in marcas)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>

            </div>
            <div class="form-group">
                <label asp-for="Equipo" class="control-label"></label>
                <select asp-for="EquipoId" class="form-control">
                    @foreach (var item in equipos)
                    {
                        <option value="@item.Id">@item.NombreEquipo</option>
                    }
                </select>

            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
