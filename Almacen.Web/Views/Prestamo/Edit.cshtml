@model Almacen.Models.Models.Prestamo

@{
    ViewData["Title"] = "Edit";

    List<Almacen.Models.Models.Marca> marcas = ViewBag.Marcas as List<Almacen.Models.Models.Marca>;

    List<Almacen.Models.Models.Equipo> equipo = ViewBag.Equipo as List<Almacen.Models.Models.Equipo>;

}

<h1>Edit</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Persona" class="control-label"></label>
                <input asp-for="Persona" class="form-control" />
                <span asp-validation-for="Persona" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Marca</label>
                <select name="MarcaId" class="form-control">
                    <option selected value="@Model.MarcaId">@marcas.Where(x => x.Id == Model.MarcaId).FirstOrDefault().Nombre</option>
                    @foreach (var item in marcas)
                    {
                        @if (Model.MarcaId != item.Id)
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }
                    }
                </select>

            </div>

            <div class="form-group">
                <label class="control-label">Equipo</label>
                <select name="EquipoId" class="form-control">
                    <option selected value="@Model.EquipoId">@equipo.Where(x => x.Id == Model.EquipoId).FirstOrDefault().NombreEquipo</option>
                    @foreach (var item in equipo)
                    {
                        @if (Model.EquipoId != item.Id)
                        {
                            <option value="@item.Id">@item.NombreEquipo</option>
                        }
                    }
                </select>

            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
